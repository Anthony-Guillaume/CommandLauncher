{
  "name": "command-launcher",
  "displayName": "Command launcher",
  "description": "Add check box type to task input type",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.72.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:command-launcher"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commandLauncher.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "command-launcher",
          "title": "Command launcher",
          "icon": "$(run)"
        }
      ]
    },
    "views": {
      "command-launcher": [
        {
          "id": "launcher",
          "name": "At your command",
          "contextualTitle": "Command launcher"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "commandLauncher.refresh",
          "when": "view == launcher",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Actions",
      "properties": {
        "commandLauncher.actions": {
          "type": "array",
          "description": "Array of actions to be provided to user.",
          "default": [],
          "items": {
            "type": "object",
            "description": "Command and arguments associated.",
            "additionalProperties": false,
            "required": [
              "command",
              "arguments"
            ],
            "properties": {
              "group": {
                "description": "All command with same group will be packed in tree.",
                "type": "string",
                "default": ""
              },
              "label": {
                "description": "Label to be shown in tree. If none, command will be shown instead.",
                "type": "string",
                "default": ""
              },
              "command": {
                "description": "Command to be executed.",
                "type": "string"
              },
              "arguments": {
                "description": "Arguments, can be string, promptString or pickString.",
                "type": "array",
                "default": [],
                "items": {
                  "type": [
                    "string",
                    "object"
                  ],
                  "oneOf": [
                    {
                      "type": "string"
                    },
                    {
                      "title": "promptString",
                      "type": "object",
                      "additionalProperties": false,
                      "required": [
                        "label"
                      ],
                      "properties": {
                        "label": {
                          "description": "Shown in the quick input, provides context for the input.",
                          "type": "string"
                        }
                      }
                    },
                    {
                      "title": "pickString",
                      "type": "object",
                      "additionalProperties": false,
                      "required": [
                        "options"
                      ],
                      "properties": {
                        "options": {
                          "description": "An array of options for the user to pick from.",
                          "type": "array",
                          "items": {
                            "type": "string"
                          }
                        }
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.72.0",
    "@types/glob": "^8.0.0",
    "@types/mocha": "^10.0.0",
    "@types/node": "16.x",
    "@typescript-eslint/eslint-plugin": "^5.38.1",
    "@typescript-eslint/parser": "^5.38.1",
    "eslint": "^8.24.0",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.8.4",
    "ts-loader": "^9.4.1",
    "webpack": "^5.74.0",
    "webpack-cli": "^4.10.0",
    "@vscode/test-electron": "^2.1.5"
  }
}